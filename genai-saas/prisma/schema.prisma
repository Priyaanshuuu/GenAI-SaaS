generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String
  image     String
  plan      String    @default("FREE")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  summaries Summary[]
  uploads  Upload[]
}

model Summary {
  id          String   @unique @default(cuid())
  userId      String
  inputType   String
  originalUrl String?
  summaryText String?
  outputLang  String?
  audioUrl    String?
  pdfUrl      String?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  uploadId String?
  upload   Upload? @relation(fields: [uploadId], references: [id])
  share     Share[]

}

enum UploadType {
  PDF
  VIDEO
  AUDIO
  LINK
}

enum UploadStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}


model Upload {
  id          String   @id @default(cuid())
  userId      String
  type        UploadType
  source      String        // file URL / yt link / web URL
  status      UploadStatus  @default(PENDING)
  createdAt   DateTime      @default(now())

  user        User          @relation(fields: [userId], references: [id])
  summaries   Summary[]
}

 model Share{
  id         String   @id @default(cuid())
  slug       String @unique
  summaryId String  @unique
  createdAt DateTime @default(now())

  summary Summary @relation(fields: [summaryId] , references: [id])
 }

 


