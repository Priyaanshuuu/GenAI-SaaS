generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String
  image     String
  plan      String    @default("FREE")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  summaries Summary[]
}

model Summary {
  id          String   @unique @default(cuid())
  userId      String
  inputType   String
  originalUrl String?
  summaryText String?
  outputLang  String?
  audioUrl    String?
  pdfUrl      String?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}
